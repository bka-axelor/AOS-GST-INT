<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">


  <form name="product-form" title="Product" model="com.axelor.apps.base.db.Product"
    extension="true" id="gst-product-form">
    <extend target="//field[@name='productCategory']">
      <insert position="after">
        <field name="gstRate" title="GST Rate" readonly="true" if-module="axelor-gst"
          if="__config__.app.isApp('gst')"/>
      </insert>
    </extend>

    <extend target="//field[@name='procurementMethodSelect']">
      <insert position="after">
        <field name="hsbn" title="HSBN" if-module="axelor-gst"
          if="__config__.app.isApp('gst')"/>
      </insert>
    </extend>
    <extend target="//field[@name='productCategory']">
      <attribute name="onChange" value="action-product-gst-rate"/>
    </extend>
  </form>

  <action-method name="action-product-gst-rate">
    <call class="com.axelor.apps.gst.web.ProductController" method="setGstRate"/>
  </action-method>

</object-views>
